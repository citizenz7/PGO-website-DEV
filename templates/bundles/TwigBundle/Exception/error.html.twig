{% extends 'base.html.twig' %}

{% block title %}{{ status_text }}{% endblock %}

{% block body %}

    <div class="container mt-4 alert-danger py-5 px-3 text-center">
        <h1 class="display-1 font-weight-bold">
            ERROR {{ status_code }}
        </h1>
        <h1 class="display-4 mb-5">{{ status_text }}</h1>
        <h3>Oops! An Error Occurred</h3>
        You should click the button below...
    </div>

    <div class="mt-3 text-center">
        <a class="btn btn-primary p-3 lead" href="{{ path('article_index') }}">
            Back to Homepage
        </a>
    </div>
        

{% endblock %}