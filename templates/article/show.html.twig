{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="row">
        <div class="col bg-light mr-3 py-3 text-justify">
            <h1>{{ article.title }}</h1>
            <p>
                <img src="{{ article.image }}" class="img-fluid float-left mr-3 mt-2" style="max-width: 400px;" alt="{{ article.title }}">
                {{ article.content | raw }}
            </p>
        </div>
        <div class="col-3 card text-center pt-3">
            <span class="lead font-weight-bold">Article details</span>
            <ul class="list-group mt-3">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    posted on
                  <span class="badge badge-dark badge-pill px-3" style="font-size: 14px;">{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</span>
                </li>
                {% if article.updatedAt != null %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        updated on
                    <span class="badge badge-dark badge-pill px-3" style="font-size: 14px;">{{ article.updatedAt ? article.updatedAt|date('Y-m-d') : '' }}</span>
                    </li>
                {% endif %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    in
                  <span class="badge badge-dark badge-pill px-3 pb-1" style="font-size: 14px;"><a class="font-weight-bold text-white" href="{{ path('category_show', {'id': article.category.id}) }}"><i class="fas fa-caret-right"></i> {{ article.category.title }}</a></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    by
                    <span class="badge badge-dark badge-pill px-3" style="font-size: 14px;">{{ article.author.username }}</span>
                </li>
              </ul>

                

        </div>
    </div>


    {#}
    <a class="btn btn-primary" href="{{ path('article_index') }}">back to list</a>

    <a class="btn btn-info" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin/articles/_delete_form.html.twig') }}
    #}

</div>
{% endblock %}
