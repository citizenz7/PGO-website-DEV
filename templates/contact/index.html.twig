{% extends 'base.html.twig' %}

{% block title %}Contact us{% endblock %}

{% block body %}

    <div class="text-center pt-4 pb-4">
        <img src="./images/PGO-black-banner-1.png" alt="PengolinCoin" class="img-fluid" style="max-height: 80px;">
    </div>

    <div class="mb-3 p-3 alert alert-info text-center" style="font-size:1.7rem;">Contact us!</div>

    {{ form_start(our_form) }}
        <div class="form-group">
            {{ form_row(our_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Your name'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your email address'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group text-right">
            <input type="submit" value="Send" class="btn btn-primary mr-3 mb-4"> <input type="reset" value="Cancel" class="btn btn-secondary mb-4">
        </div>
    {{ form_end(our_form) }}

{% endblock %}